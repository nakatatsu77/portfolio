<div class='container mx-auto'>
  <div class='text-center mt-6'>
    <h1 class='text-2xl font-handwritten font-lilita'><%= t('.title') %></h1>
  </div>
  <%= form_with url: login_path do |f| %>
  <%
=begin%>
  <%= render 'shared/error_messages', model: f.object %>
  <%
=end%>

  <%= f.label :email, class: 'label w-full md:w-1/2 mx-auto' %>
  <%= f.email_field :email, class: 'input input-bordered border-2 input-accent form-control mb-6 w-full md:w-1/2 mx-auto' %>

  <%= f.label :password, class: 'label w-full md:w-1/2 mx-auto'%>
  <%= f.password_field :password, class: 'input input-bordered border-2 input-accent form-control mb-6 w-full md:w-1/2 mx-auto' %>

  <div class='mx-auto md:w-1/2'>
    <%= f.submit t('.login'), class: 'btn btn-primary text-white w-full mt-6 mb-6 mx-auto' %>
  </div>
  <% end %>

  <div class='text-center mb-6'>
    <%= link_to t('.to_register_page'), new_user_path %>
    <%= link_to t('.password_forget'), '#' %>
  </div>
</div>