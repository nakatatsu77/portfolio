<section class="mx-4 my-4">
  <div class="text-3xl mb-4">
    <h1 class="font-handwritten">にっきをかいてみよう</h1>
  </div>
  <div class="border-2 border-neutral mx-auto max-w-lg">
    <div class="">
      <%= image_tag "post_placeholder.png", class: "card-img-top", width: "100%", height:"200" %>
      <%= form_with model: @post, local: true, html: { multipart: true } do |f| %>
      <div class="mb-3">
        <%= f.text_area :body, class: "vertical-rl w-full f-full text-2xl", placeholder: "本文を入力" %>
      </div>
      <div class="mb-3">
        <%= f.fields_for :image do |image_fields| %>
        <%= image_fields.label :image_url, "画像" %>
        <%= image_fields.file_field :image_url, class: "form-control", accept: "image/*" %>
        <% end %>
      </div>
      <%= f.submit "投稿する", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</section>